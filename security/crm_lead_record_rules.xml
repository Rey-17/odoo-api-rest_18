<odoo>
    <data noupdate="1">

        <!-- Regla para limitar visibilidad de leads a su usuario asignado -->
        <record id="crm_lead_rule_outsourcing_user" model="ir.rule">
            <field name="name">Leads del usuario outsourcing</field>
            <field name="model_id" ref="crm.model_crm_lead"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('brain_api_18.group_outsourcing_user'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="0"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="0"/>
        </record>

    </data>
</odoo>
